<%= form_for(@shopping_run) do |f| %>
  <% if @shopping_run.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@shopping_run.errors.count, "error") %> prohibited this shopping_run from being saved:</h2>

      <ul>
      <% @shopping_run.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well">
    <label for="shopping_run_time">Time:</label>
    <input id="shopping_run_time" name="shopping_run[time]" size="30" type="text" value="01/01/2013"/>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
    <script>
        $('#shopping_run_time').datepicker({
            format:"dd/mm/yyyy"
        });
    </script>
<% end %>

