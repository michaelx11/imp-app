<% provide(:title, "Meals") %>

<div class="hero-unit">
    <h1>Meals     <small> create, edit, vote and cook </small></h1>
</div>
<div class="row-fluid">
    <table class="display" id="meal-table">
        <thead>
            <tr>
                <th>MEAL</th>
                <th>Proposed by</th>
                <th># Votes</th>
                <% if signed_in? %>
                    <th></th>
                    <th></th>
                <% end %>
                <% if is_admin? %>
                    <th></th>
                <% end %>
            </tr>
        </thead>
        <tbody>
            <% @meals.each do |meal| %>
                <tr>
                    <td> <%= meal.name %> </td>
                    <td> <%= meal.proposer %> </td>
                    <td> <%= meal.votes.size %> </td>
                    <% if signed_in? %>
                        <% if meal.votes.include?(current_user.name) %>
                            <td> <%= link_to '-1', edit_vote_path(meal) %> </td>
                        <% else %>
                            <td> <%= link_to '+1', edit_vote_path(meal) %> </td>
                        <% end %>
                        <td> <%= link_to 'Cook this!', new_meal_event_path(:meal => meal.id) %> </td>
                    <% end %>
                    <% if is_admin? %>
                        <td> <%= link_to 'Remove', meal, :method => :delete, :data => { :confirm => "Are you sure?" } %></td>
                    <% end %>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<br />

<% if signed_in? %>
    <%= link_to 'New Meal', new_meal_path, :class => "btn btn-primary" %>
<% end %>

<script>
    $(document).ready(function() {
        $("#meal-table").dataTable();
    });

    $.extend( $.fn.dataTableExt.oStdClasses, {
        "sWrapper": "dataTables_wrapper form-inline"
    });
</script>

