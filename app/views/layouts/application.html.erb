<!DOCTYPE html>

<!-- Convenience functions for views -->
<%
    def show_users(ids)
        ids.map{ |id| User.find_by_id(id).name }.join(', ')
    end
%>

<html>
    <head>
        <title><%= yield(:title) %></title>
        <%= stylesheet_link_tag    "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
        <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
    </head>
    <body>
        <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="navbar-inner">
            <div class="container">
                <%= link_to "MIT Simple", '/', :id => "logo" %>
                <nav>
                <ul class="nav pull-left">
                    <li><%= link_to "Meals", meals_path %></li>
                    <li><%= link_to "Schedule", meal_events_path %></li>
                    <li><%= link_to "Shopping Runs", shopping_runs_path %></li>
                </ul>
                </nav>
                <nav>
                <ul class="nav pull-right">
                    <li><%= link_to "Home", '/' %></li>
                    <% if signed_in? %>
                        <li><a>Welcome, <%= current_user.name %>!</a></li>
                        <li id="fat-menu" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Account<b class="caret"></b>
                        </a>
                        <ul id="dropdown" class="dropdown-menu">
                            <li ><%= link_to "Profile", current_user, {:id => "dropdown-profile"} %></li>
                            <li ><%= link_to "Sign out", signout_path, {:id => "dropdown-signout"},  method: "delete" %></li>
                        </ul>
                        </li>
                    <% else %>
                        <li><%= link_to "Sign In", signin_path %></li>
                    <% end %>
                </ul>
                </nav>
            </div>
        </div>
        </header>
        <div class="container">
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
            <%= yield %>
        </div>
    </body>
</html>

<!-- Script CSS style appending -->
<script>
    document.getElementById("dropdown-profile").style.color = "black";
    document.getElementById("dropdown-signout").style.color = "black";
</script>

